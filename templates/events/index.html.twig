{% extends 'base.html.twig' %}

{% block body %}

	<h2>
		Latest Events
	</h2>
	<div class="container">
		<div class="row">
			{% for event in events %}

				<div class="card col-lg-3 col-md-4 col-sm-12" style="width: 18rem;">
					<img src="{{event.image}}" class="card-img-top" alt="{{event.name}}">
					<div class="card-body">
						<h5 class="card-title">{{event.name}}</h5>
						<p class="card-text">{{event.eventDate|date('F j, Y, g:i a')}}</p>
						<a href="/details/{{event.id}}" class="btn btn-success">View</a>
						<a href="/edit/{{event.id}}" class="btn btn-warning">Edit</a>
						<a href="/delete/{{event.id}}" class="btn btn-danger">Delete</a>
					</div>
				</div>

			{% endfor %}
		</div>
	</div>
{% endblock %}
